{
  "name": "ai-prompt-manager",
  "displayName": "AI prompt manager",
  "description": "save and insert saved prompt to AI chatbot",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiPromptTemplatesContainer",
          "title": "Prompt Templates",
          "icon": "resources/prompt-templates.svg"
        }
      ]
    },
    "views": {
      "aiPromptTemplatesContainer": [
        {
          "id": "aiPromptTemplatesView",
          "name": "AI Prompt Templates"
        }
      ],
      "explorer": [
        {
          "id": "aiPromptTemplatesView",
          "name": "AI Prompt Templates"
        }
      ]
    },
    "commands": [
      {
        "command": "aiPromptTemplates.refresh",
        "title": "Refresh Prompt Templates"
      },
      {
        "command": "aiPromptTemplates.insertPrompt",
        "title": "Insert Selected Prompt"
      },
      {
        "command": "aiPromptTemplates.addPrompt",
        "title": "Add New Prompt"
      },
      {
        "command": "aiPromptTemplates.editPrompt",
        "title": "Edit Selected Prompt"
      },
      {
        "command": "aiPromptTemplates.deletePrompt",
        "title": "Delete Selected Prompt"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "aiPromptTemplates.editPrompt",
          "when": "view == aiPromptTemplatesView && viewItem == promptItem",
          "group": "inline"
        },
        {
          "command": "aiPromptTemplates.deletePrompt",
          "when": "view == aiPromptTemplatesView && viewItem == promptItem",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "aiPromptTemplates.addPrompt",
          "when": "view == aiPromptTemplatesView",
          "group": "navigation"
        },
        {
          "command": "aiPromptTemplates.refresh",
          "when": "view == aiPromptTemplatesView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
